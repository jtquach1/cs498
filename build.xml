<project default="jar">

    <property name="APP_FULL_NAME" value="Algorithms (Introduction to Compiler Construction in a Java World)"/>
    <property name="SRC_DIR" value="src"/>
    <property name="CLASS_DIR" value="out"/>
    <property name="LIB_DIR" value="lib"/>
    <property name="JAVADOC_DIR" value="jmm-javadoc"/>
    <property name="J2H_DIR" value="jmm-code"/>

    <!-- help: Lists main targets -->
    <target name="help">
        <echo message="help: Lists main targets"/>
        <echo message="javacc: Generates JavaCC scanner and parser"/>
        <echo message="compile: Compiles the algorithms source files"/>
        <echo message="jar: Bundles algorithms classes into a jar file"/>
        <echo message="javadoc: Generates javadoc for algorithms classes"/>
        <echo message="j2h: Generates browsable code using java2html"/>
        <echo message="package: Creates a distributable for algorithms"/>
        <echo message="clean: Removes generated files and folders"/>
    </target>

    <!-- javacc: Generates JavaCC scanner and parser. -->
    <target name="javacc">
        <echo message="Generating JavaCC files..."/>
        <javacc target="${SRC_DIR}/algorithms/regex.jj" outputdirectory="${SRC_DIR}/algorithms"
                javacchome="${LIB_DIR}" static="false"/>
    </target>

    <!-- compile: Compiles the algorithms source files. -->
    <target name="compile" depends="clean,javacc">
        <echo message="Compiling algorithms source files..."/>
        <mkdir dir="${CLASS_DIR}"/>
        <javac srcdir="${SRC_DIR}" destdir="${CLASS_DIR}" includes="algorithms/**"
               includeantruntime="false" debug="on">
            <!-- Uncomment the following to see compiler warnings. -->
            <!-- <compilerarg value="-Xlint" />                    -->
        </javac>
    </target>

    <!--
       jar: Bundles algorithms classes into a jar file.
    -->
    <target name="jar" depends="compile">
        <echo message="Bundling class files into jar files..."/>
        <jar destfile="${LIB_DIR}/algorithms.jar" basedir="${CLASS_DIR}" includes="algorithms/**"/>
    </target>

    <!-- javadoc: Generates javadoc for algorithms classes. -->
    <target name="javadoc">
        <echo message="Generating javadoc for algorithms classes..."/>
        <mkdir dir="${JAVADOC_DIR}"/>
        <javadoc overview="${SRC_DIR}/overview.html" package="Yes" sourcepath="${SRC_DIR}"
                 destdir="${JAVADOC_DIR}" packagenames="algorithms.*"
                 windowtitle="${APP_FULL_NAME}" doctitle="${APP_FULL_NAME}">
            <link href="https://docs.oracle.com/en/java/javase/11/docs/api/"/>
        </javadoc>
    </target>

    <!-- j2h: Generates browsable code using java2html. -->
    <target name="j2h">
        <echo message="Generating browsable code for algorithms..."/>
        <mkdir dir="${J2H_DIR}"/>
        <java jar="${LIB_DIR}/j2h.jar" fork="true" failonerror="true" maxmemory="128m">
            <arg value="-m"/>
            <arg value="4"/>
            <arg value="-d"/>
            <arg value="${J2H_DIR}"/>
            <arg value="-js"/>
            <arg value="${SRC_DIR}"/>
        </java>
    </target>

    <!--
       package: Makes a distributable package for the compiler which includes the sources,
       binaries, and documentation.
    -->
    <target name="package" depends="jar,javadoc,j2h">
        <echo message="Making a distributable algorithms.zip..."/>
        <zip destfile="algorithms.zip"
             basedir="../"
             includes="algorithms/**"
             excludes="algorithms/${CLASS_DIR}/**,algorithms/*.zip"/>
    </target>

    <!-- clean: Removes generated files and folders. -->
    <target name="clean">
        <echo message="Removing generated files and folders..."/>
        <delete file="${SRC_DIR}/algorithms/Token.java"/>
        <delete file="${SRC_DIR}/algorithms/TokenMgrError.java"/>
        <delete file="${SRC_DIR}/algorithms/ParseException.java"/>
        <delete file="${SRC_DIR}/algorithms/JavaCCParser.java"/>
        <delete file="${SRC_DIR}/algorithms/JavaCCParserTokenManager.java"/>
        <delete file="${SRC_DIR}/algorithms/JavaCCParserConstants.java"/>
        <delete file="${SRC_DIR}/algorithms/SimpleCharStream.java"/>
        <delete>
            <fileset dir="${basedir}" includes="**/*.class"/>
            <fileset dir="${basedir}" includes="**/*.s" excludes="src/algorithms/SPIM.s"/>
        </delete>
        <delete file="algorithms.zip"/>
        <delete file="${LIB_DIR}/algorithms.jar"/>
        <delete dir="${CLASS_DIR}"/>
        <delete dir="${JAVADOC_DIR}"/>
        <delete dir="${J2H_DIR}"/>
    </target>

</project>
